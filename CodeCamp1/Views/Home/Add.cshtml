    <script type="text/javascript">
        function calcEstimation() {

            var t = parseFloat($('#TotalMark').val());
            //alert(t);
            var es = "error";

            if ((98 <= t) && (t <= 100))
                es = "A+";

            else if ((95 <= t) && (t < 98))
                es = "A";

            else if ((90 <= t) && (t < 95))
                es = "A-";

            else if ((85 <= t) && (t < 90))
                es = "B+";

            else if ((80 <= t) && (t < 85))
                es = "B";

            else if ((75 <= t) && (t < 80))
                es = "B-";

            else if ((70 <= t) && (t < 75))
                es = "C+";

            else if ((65 <= t) && (t < 70))
                es = "C";

            else if ((60 <= t) && (t < 65))
                es = "C-";

            else if ((55 <= t) && (t < 60))
                es = "D+";

            else if ((50 <= t) && (t < 55))
                es = "D";

            else if ((0 < t) && (t < 50))
                es = "F";

            else if (t == -3)
                es = "Z";

            else if (t == -6)
                es = "W";

            else if (t == -9)
                es = "l";

            $('#FinalEstimation').val(es);


        };

        $('#MiddleExamMark').on('change', function () {
            console.log(this.value);

            var t = parseFloat($('#MiddleExamMark').val())
                + parseFloat($('#ActivityMark').val())
                + parseFloat($('#FinalExamMark').val());



            $('#TotalMark').val(t);

            calcEstimation();

